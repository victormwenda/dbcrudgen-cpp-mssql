package ${PROJECT_PACKAGE}.${TRANSACTIONS_PACKAGE};

import ${PROJECT_PACKAGE}.${DB_CONN_PACKAGE}.${DB_CONN_CLASS};

import org.hibernate.Session;
import org.hibernate.Transaction;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Query;

import java.util.List;

${VISIBILITY} class ${CLASS_NAME} {

    /**
     * Insert object
     *
     * @param object
     */
    public void insert(Object object) {
        Session session = ${DB_CONN_CLASS}.getSession();
        Transaction transaction = session.getTransaction();
        transaction.begin();

        EntityManagerFactory entityManagerFactory = session.getEntityManagerFactory();
        EntityManager entityManager = entityManagerFactory.createEntityManager();

        entityManager.persist(object);

        transaction.commit();


    }

    /**
     * Update object
     *
     * @param connection
     * @param object
     */
    public void update(${DB_CONN_CLASS} connection, Object object) {
        Session session = ${DB_CONN_CLASS}.getSession();
        Transaction transaction = session.getTransaction();
        transaction.begin();

        EntityManagerFactory entityManagerFactory = session.getEntityManagerFactory();
        EntityManager entityManager = entityManagerFactory.createEntityManager();

        entityManager.merge(object);

        transaction.commit();
    }

    /**
     * Delete object
     *
     * @param connection
     * @param object
     */
    public void delete(${DB_CONN_CLASS} connection, Object object) {
        Session session = ${DB_CONN_CLASS}.getSession();
        Transaction transaction = session.getTransaction();
        transaction.begin();

        EntityManagerFactory entityManagerFactory = session.getEntityManagerFactory();
        EntityManager entityManager = entityManagerFactory.createEntityManager();

        entityManager.remove(object);

        transaction.commit();
    }

    /**
     * Get object
     *
     * @param connection
     * @param hql
     * @param aClass
     * @return
     */
    public Object queryOne(${DB_CONN_CLASS} connection, String hql, Class aClass) {
        Session session = ${DB_CONN_CLASS}.getSession();
        Transaction transaction = session.getTransaction();
        transaction.begin();

        EntityManagerFactory entityManagerFactory = session.getEntityManagerFactory();
        EntityManager entityManager = entityManagerFactory.createEntityManager();

        Query query = entityManager.createQuery(hql, aClass);
        Object singleResult = query.getSingleResult();

        transaction.commit();

        return singleResult;
    }

    /**
     * Get objects
     *
     * @param connection
     * @param hql
     * @return
     */
    public List queryMany(${DB_CONN_CLASS} connection, String hql) {
        Session session = ${DB_CONN_CLASS}.getSession();
        Transaction transaction = session.getTransaction();
        transaction.begin();

        EntityManagerFactory entityManagerFactory = session.getEntityManagerFactory();
        EntityManager entityManager = entityManagerFactory.createEntityManager();

        Query query = entityManager.createQuery(hql);
        List resultList = query.getResultList();

        transaction.commit();

        return resultList;
    }

}